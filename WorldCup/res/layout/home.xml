<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey0"
    >
    <RelativeLayout 
        android:id="@+id/rel_home_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/calm_green"
        >
        <ImageView 
            android:id="@+id/home_header_mini_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mini_back_focus"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            />
        
        <TextView
            android:id="@+id/home_header_back_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_header_mini_back"
            android:text="赛程"
            android:textColor="@color/grey1"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            />
        
        <TextView
            android:id="@+id/home_header_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="世界杯"
            android:textColor="@color/grey1"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/rel_home_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rel_home_header"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >
        
        <TextView
            android:id="@+id/home_navigation_0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textColor="@color/grey1"
            android:textSize="30dp"
            android:gravity="center"
            android:background="@drawable/navigation_left"
            />
        <TextView
            android:id="@+id/home_navigation_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_navigation_0"
            android:layout_marginLeft="-1dp"
            android:text="今天"
            android:textColor="@color/grey1"
            android:textSize="30dp"
            android:gravity="center"
            android:background="@drawable/navigation_center"
            />
        <TextView
            android:id="@+id/home_navigation_2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_navigation_1"
            android:layout_marginLeft="-1dp"
            android:text="明天"
            android:textColor="@color/grey1"
            android:textSize="30dp"
            android:gravity="center"
            android:background="@drawable/navigation_right"
            />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/rel_home_content0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_home_navigation"
        android:visibility="visible"
        >
        <ListView 
            android:id="@+id/home_schedule_list"
            android:layout_width="wrap_content"
            android:layout_height="1000dp" 
            android:layout_centerHorizontal="true"
            android:cacheColorHint="#00000000" 
            android:divider="#00000000" 
            android:dividerHeight="10dp"
            android:headerDividersEnabled="false" 
            android:footerDividersEnabled="false"
            android:listSelector="#00000000" 
            android:scrollingCache="false" 
            android:fadingEdge="none" 
            android:scrollbars="none" 
            >
            
        </ListView>
        
        
        
    </RelativeLayout>

</RelativeLayout>