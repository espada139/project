<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey0"
    >
    <RelativeLayout 
        android:id="@+id/rel_setting_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/calm_green"
        >
        <ImageView 
            android:id="@+id/setting_header_mini_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mini_back_focus"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            />
        
        <TextView
            android:id="@+id/setting_header_back_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/setting_header_mini_back"
            android:text="赛程"
            android:textColor="@color/grey1"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            />
        
        <TextView
            android:id="@+id/setting_header_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="科目"
            android:textColor="@color/grey1"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
        
    </RelativeLayout>
    

</RelativeLayout>